@namespace Blazor_pwa.Pages.Components
@inherits ListViewObject

@{
    base.BuildRenderTree(__builder);
}

@code {
    public TreeViewObject()
    {
        @* beforeHeaderControls = builder =>
{
builder.OpenElement(0, "FlatButton");
builder.AddAttribute(1, "Content", "@iconContent");
builder.AddAttribute(2, "OnClick", "toogle");
builder.CloseElement();
};
*@
    }

    @* bool isToogled = false;
string iconContent => isToogled ? "v" : ">";
string currentHoverStyle => isToogled ? toogledHoverStyle : defaultHoverStyle;
string defaultHoverStyle = "transform: rotate(15deg);";
string toogledHoverStyle = "transform: rotate(-15deg);";

void toogle()
{
isToogled = !isToogled;
} *@
}