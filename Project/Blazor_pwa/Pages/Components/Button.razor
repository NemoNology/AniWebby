@namespace Blazor_pwa.Pages.Components
@inherits BaseComponent

<button type="button"
    style="border-radius: 8px; padding: 8px; font-size: medium; border: 1px solid transparent; background-color: var(--color-light); cursor: pointer; @AddedStyle @Style"
    class="@Class" @onmouseenter="OnMouseEnter" @onmouseleave="OnMouseLeave" @onmousedown="OnMouseDown"
    @onmouseup="OnMouseUp" @onclick="@OnClick">
    @Content
</button>

@code {
    [Parameter]
    public string Content { get; set; } = "";
    [Parameter]
    public Action? OnClick { get; set; }

    bool isHovered = false;
    bool isActive = false;
    string hoverStyle = "border-color: var(--color-dark);";
    string activeStyle = "background-color: var(--color-accent);";
    string AddedStyle => (isHovered ? hoverStyle : "") + (isActive ? activeStyle : "");

    void OnMouseEnter(Microsoft.AspNetCore.Components.Web.MouseEventArgs e) => isHovered = true;
    void OnMouseLeave(Microsoft.AspNetCore.Components.Web.MouseEventArgs e) => isHovered = isActive = false;
    void OnMouseDown(Microsoft.AspNetCore.Components.Web.MouseEventArgs e) => isActive = true;
    void OnMouseUp(Microsoft.AspNetCore.Components.Web.MouseEventArgs e) => isActive = false;
}