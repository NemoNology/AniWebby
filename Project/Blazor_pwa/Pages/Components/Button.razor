@namespace Blazor_pwa.Pages.Components

<style>
    button {
        border-radius: 8px;
        padding: 8px;
        font-size: medium;
        border: 1px solid transparent;
        background-color: var(--color-light);
        cursor: pointer;
    }

    button:hover {
        border-color: var(--color-dark);
    }

    button:active {
        background-color: var(--color-accent);
    }
</style>

<button type="button">
    @ChildContent
</button>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}