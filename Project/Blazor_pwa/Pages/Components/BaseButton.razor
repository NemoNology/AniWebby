@namespace Blazor_pwa.Pages.Components
@inherits BaseComponent

@code {
    [Parameter]
    public string Content { get; set; } = "";
    [Parameter]
    public Action OnClick { get; set; } = () => { };
    [Parameter]
    public string HoverStyle { get; set; } = "";
    [Parameter]
    public string ActiveStyle { get; set; } = "";

    protected bool isHovered = false;
    protected bool isActive = false;

    protected string AddedStyle => (isHovered ? HoverStyle : "") + (isActive ? ActiveStyle : "");

    protected void OnMouseEnter(Microsoft.AspNetCore.Components.Web.MouseEventArgs e) => isHovered = true;

    protected void OnMouseLeave(Microsoft.AspNetCore.Components.Web.MouseEventArgs e) => isHovered = isActive = false;

    protected void OnMouseDown(Microsoft.AspNetCore.Components.Web.MouseEventArgs e) => isActive = true;

    protected void OnMouseUp(Microsoft.AspNetCore.Components.Web.MouseEventArgs e) => isActive = false;
}